@require '_define.styl'
@require 'core.styl'

top-menu-height = 50px

body
	background black

.top-menu
	position fixed
	top 0
	left 0
	width 100%
	height top-menu-height
	line-height top-menu-height
	background-color black
	z-index 3
	.logo
		font-size 18px
		font-size 1.3rem
		color white
		line-height 50px
		font-weight 700
		text-decoration none

.page
	display table
	width 100%
	height 100%

.news-table

	border-spacing 2px
	width 100%
	height 100%

	td {
		background-color black
		background-color rgba(0, 0, 0, .5)
		vertical-align bottom
		text-align center
	}

.section-logo
	background #eaeaea

.section-services
	background #f6da40

.section-technologies
	background #00af43

.section-about-us
	background-color white
	background-image url(home-about-us)
	background-position center bottom
	background-repeat no-repeat
	background-size 890px 433px

@media screen and (max-width: 890px), (max-height: 430px)
	.section-about-us
		background-size contain

.section-partners
	background-color #244f90

	.page
		background-image url(home-map-partner)
		background-repeat no-repeat
		background-position center center
		background-size 622px 293px
		margin-top 10px
		height calc('100% - 20px')

@media screen and (max-width: 620px)
	.section-partners
		.page
			background-size contain

.section-news
	background-color #f3f3f3

.section-footer
	background-color white